    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_checkmark"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_checkmark"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourAssistantYora"
        tools:targetApi="31"
        android:name=".CloudinaryApp">

        <!-- SPLASH ACTIVITY - ENTRY POINT APP -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- MAIN ACTIVITY - HOST NAVIGATION (NavHost + AppNavigation) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" />

