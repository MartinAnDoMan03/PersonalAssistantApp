<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <!-- permission (jika butuh internet) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_checkmark"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_checkmark"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourAssistantYora"
        tools:targetApi="31" >
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_profile_screen"
            android:theme="@style/Theme.YourAssistantYora" />
        <!-- SPLASH ACTIVITY - LAUNCHER (entry point app) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.YourAssistantYora" /> <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" /> <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" /> <!-- Optional other activities -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" />
        <activity
            android:name=".CheckEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.YourAssistantYora" />
        <activity
            android:name=".TaskActivity"
            android:exported="false" />
        <activity
            android:name=".NoteActivity"
            android:exported="false"
            android:label="My Notes" />
        <activity
            android:name=".NoteDetailActivity"
            android:exported="false"
            android:label="Note Detail"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".CreateNoteActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>