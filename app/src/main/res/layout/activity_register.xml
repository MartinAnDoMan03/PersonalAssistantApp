<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RegisterActivity">

    <!-- Small top title -->
    <TextView
        android:id="@+id/tv_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regis Form"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ScrollView for content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_small_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Card background container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:background="@android:color/white"
                android:layout_margin="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <!-- Back button -->

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Create Account"
                    android:textColor="#111111"
                    android:textSize="28sp"
                    app:layout_constraintTop_toBottomOf="@id/imageView2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"/>


                <!-- Subtitle -->

                <!-- Username Label -->
                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fill in the details to get started"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="@id/tv_title" />

                <TextView
                    android:id="@+id/tv_username_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Username"
                    android:textSize="12sp"
                    android:textColor="#616161"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <!--Username Input-->
                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_background"
                    android:hint="Enter your Username"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface"
                    android:padding="12dp"
                    android:inputType="textPersonName"
                    app:layout_constraintTop_toBottomOf="@id/tv_username_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--Email Label-->
                <TextView
                    android:id="@+id/tv_email_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textColor="#616161"
                    app:layout_constraintTop_toBottomOf="@id/et_username"
                    app:layout_constraintStart_toStartOf="parent" />

                <!--Email Field-->
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_background"
                    android:hint="Enter your Email"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"
                    app:layout_constraintTop_toBottomOf="@id/tv_email_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <!-- Password Label -->
                <TextView
                    android:id="@+id/tv_password_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Password"
                    android:textSize="12sp"
                    android:textColor="#616161"
                    app:layout_constraintTop_toBottomOf="@id/et_email"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Password Input -->
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_background"
                    android:hint="Enter your Password"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@id/tv_password_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password Strength Bar -->
                <ProgressBar
                    android:id="@+id/password_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="6dp"
                    android:progress="0"
                    android:progressBackgroundTint="#E0E0E0"
                    app:layout_constraintTop_toBottomOf="@id/et_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password Strength Text -->
                <TextView
                    android:id="@+id/password_strength_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/password_progress"
                    app:layout_constraintStart_toStartOf="parent" />


                <!-- Confirm Password Label -->
                <TextView
                    android:id="@+id/tv_confirm_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Confirm Password"
                    android:textSize="12sp"
                    android:textColor="#616161"
                    app:layout_constraintTop_toBottomOf="@id/password_strength_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Confirm Password Input -->
                <EditText
                    android:id="@+id/et_confirm"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:hint="Confirm your Password"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@id/tv_confirm_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password Match Status -->
                <TextView
                    android:id="@+id/password_match_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passwords match"
                    android:textSize="12sp"
                    android:textColor="@color/success"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/et_confirm"
                    app:layout_constraintStart_toStartOf="parent" />


                <!-- Terms and Conditions -->
                <LinearLayout
                    android:id="@+id/terms_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/password_match_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <CheckBox
                        android:id="@+id/cb_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:buttonTint="@color/purple_start"
                        android:contentDescription="Agree to terms" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="I agree to Terms and Conditions"
                        android:textSize="14sp"
                        android:textColor="#616161" />

                </LinearLayout>





                <!-- Create Account Button -->
                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:alpha="10"
                    android:background="#7518ED"
                    android:backgroundTint="#8E21D7"
                    android:text="Create Account"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/terms_container" />

                <!-- Footer -->
                <TextView
                    android:id="@+id/tv_footer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#616161"
                    android:textAlignment="center"
                    android:layout_marginTop="18dp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_create"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_login_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? Login"
                    android:textSize="13sp"
                    android:textColor="#1976D2"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_footer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:alpha="0.7"
                    android:contentDescription="Back"
                    app:srcCompat="@drawable/ionic_ionicons_arrow_back_circle_outline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>