<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Page Indicator -->
    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/indicator1"
            android:layout_width="32dp"
            android:layout_height="3dp"
            android:layout_marginEnd="6dp"
            android:background="#5B67CA" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="32dp"
            android:layout_height="3dp"
            android:background="#D9D9D9" />
    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/pageIndicator"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Logo Icon -->
            <ImageView
                android:id="@+id/iconLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_checkmark_putih"
                android:background="@drawable/logo_background"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Welcome to Yora! ðŸ‘‹"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/iconLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your all-in-one productivity companion. Let's get you setup and ready to achieve more!"
                android:textSize="15sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Action Buttons Container (for page 2) -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp">

                <!-- Create First Task Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnCreateTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical"
                        android:background="#F9FAFB">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_circle_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Create your first task"
                            android:textSize="15sp"
                            android:textColor="#1F2937"
                            android:layout_marginStart="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Take Quick Note Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnTakeNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical"
                        android:background="#F9FAFB">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_circle_blue" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Take a quick note"
                            android:textSize="15sp"
                            android:textColor="#1F2937"
                            android:layout_marginStart="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Join Team Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnJoinTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical"
                        android:background="#F9FAFB">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_circle_purple" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Join or create a team"
                            android:textSize="15sp"
                            android:textColor="#1F2937"
                            android:layout_marginStart="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <TextView
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="#9CA3AF"
                android:textSize="15sp"
                android:gravity="center"
                android:visibility="gone"
                android:background="?android:attr/selectableItemBackground" />

            <!-- Continue Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Continue â†’"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/button_gradient_background"
                android:elevation="2dp"
                android:stateListAnimator="@null" />
        </LinearLayout>

        <!-- Skip Button -->
        <TextView
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="#9CA3AF"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>