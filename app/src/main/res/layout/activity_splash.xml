<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background">

    <!-- Geometric Shapes Background (TAMBAHAN BARU) -->
    <com.example.yourassistantyora.screen.GeometricShapesView
        android:id="@+id/geometricShapesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ripple Wave Background -->
    <com.example.yourassistantyora.screen.RippleWaveView
        android:id="@+id/rippleWaveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container untuk logo + shadow (akan naik ke atas saat teks muncul) -->
    <FrameLayout
        android:id="@+id/logoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Shadow Layer 1 (paling blur/luar) -->
        <View
            android:id="@+id/shadowView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_1" />

        <!-- Shadow Layer 2 -->
        <View
            android:id="@+id/shadowView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_2" />

        <!-- Shadow Layer 3 -->
        <View
            android:id="@+id/shadowView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_3" />

        <!-- Shadow Layer 4 -->
        <View
            android:id="@+id/shadowView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_4" />

        <!-- Shadow Layer 5 -->
        <View
            android:id="@+id/shadowView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_5" />

        <!-- Shadow Layer 6 -->
        <View
            android:id="@+id/shadowView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_6" />

        <!-- Shadow Layer 7 -->
        <View
            android:id="@+id/shadowView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_7" />

        <!-- Shadow Layer 8 -->
        <View
            android:id="@+id/shadowView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_8" />

        <!-- Shadow Layer 9 (core shadow) -->
        <View
            android:id="@+id/shadowView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_layer_9" />

        <!-- Logo ImageView (pakai icon UNGU dari awal) -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checkmark"
            android:scaleType="fitCenter" />

    </FrameLayout>

    <com.example.yourassistantyora.screen.ParticleView
        android:id="@+id/particleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container untuk teks (mulai di posisi logo, lalu muncul) -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Name -->
        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_yora"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/taglineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>